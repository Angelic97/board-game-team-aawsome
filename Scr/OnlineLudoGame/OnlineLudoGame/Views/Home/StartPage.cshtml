@model OnlineLudoGame.Models.Player
@{
    ViewBag.Title = "Join";
}
<html>
<head>
    <title>@ViewBag.Title</title>
</head>
<body>
    <table border="1" style="width:1600px;background-color:greenyellow; font-family:'Arial Rounded MT'">
        <tr>
            <td colspan="2" style="text-align:center"><h3>Welcome to our Aawsome Tic Tac Toe game!</h3></td>
        </tr>
        <tr>
            <td style="width:1000px; background-color:greenyellow;">


                <br />
                @using (Html.BeginForm("LoginUser", "Home"))
                {
                    <div>
                        @*<input type="text" value="Enter your name" name="name">
                            <input type="text" value="Enter your email" name="email">*@
                        @Html.Label("Name")
                        @Html.TextBox("nameInput")
                    </div>
                    <br />
                    <div>
                        @Html.Label("Email")
                        @Html.TextBox("emailInput")
                        <br />
                        <input type="submit" name="startbtn" value="Start a game">
                        <input type="submit" name="joinbtn" value="Join an existing game">
                    </div>
                }
                <br />



                @* <input type="submit" name="submitbtn" value="Save your data"></input><br />*@

                <br />
                <br />

                <h4> @Html.ActionLink("Go to game", "Game")</h4>

            <td style="width:600px; background-color:blue; align-items:stretch ; style=" text-align:center;""><img src=" ~/Images/Tic_Tac_Toe.png" /></td>



        </tr>
        <tr>
            <td colspan="2" style="text-align:center; font-size:x-small;background-color:greenyellow;">
                <h5>© 2018 Team Aawsome </h5>

            </td>
        </tr>

    </table>
</body>

</html>












